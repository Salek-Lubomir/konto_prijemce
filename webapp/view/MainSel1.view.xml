<mvc:View
	controllerName="ui5.kp.controller.MainSel"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:sfb="sap.ui.comp.smartfilterbar"
	displayBlock="true"
>
	<Page id="mainSel"
	      title="{i18n>homePageTitle}">
	
			<VBox class="sapUiSmallMargin">
				<HBox class="sapUiTinyMarginTopBottom">
					<VBox class="sapUiMediumMarginEnd">
						<Label text="{i18n>subjektTyp}" labelFor="GRPA" />
						<RadioButtonGroup id="GRPA" select=".onSelectGRPA">
							<RadioButton text="{i18n>subjektIndividual}" selected="true" />
							<RadioButton text="{i18n>subjektLegal}" />
						</RadioButtonGroup>
					</VBox>
					<VBox class="sapUiMediumMarginEnd">		
						<Label text="{i18n>sourceData}" labelFor="GRPB" />
						<RadioButtonGroup id="GRPB">
							<RadioButton text="{i18n>registryKE}" selected="true" />
							<RadioButton text="{i18n>registrySAP}" />
						</RadioButtonGroup>										
					</VBox>
					<VBox class="sapUiMediumMarginEnd">		
						<Label text="{i18n>areaData}" labelFor="GRPC" />
						<RadioButtonGroup id="GRPC">
							<RadioButton text="{i18n>areaDDP}" selected="true" />
							<RadioButton text="{i18n>areaDNP}" />
							<RadioButton text="{i18n>areaREF}" />
						</RadioButtonGroup>									
					</VBox>
				</HBox>
			</VBox>

		<NavContainer id="mainNavContainer" autoFocus="false"> <!--
    		Avoid sap.m.App here. Instead, use sap.m.NavContainer:
	    	https://github.com/SAP/openui5/issues/1282#issuecomment-280575439
    		-->
        	<pages>
      		<!-- Child views will be added here by the routing mechanism -->
      		</pages>
    	</NavContainer>
	
	</Page>
</mvc:View>
